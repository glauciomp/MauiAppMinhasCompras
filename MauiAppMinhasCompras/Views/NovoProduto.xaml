<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppMinhasCompras.Views.NovoProduto"
             Title="Novo Produto">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <!-- Descrição -->
            <Entry Placeholder="Descrição"
                   Text="{Binding Descricao, Mode=TwoWay}" />
            <Label TextColor="Red" FontSize="Small"
                   Text="{Binding ErroDescricao}" />

            <!-- Quantidade -->
            <Entry Placeholder="Quantidade"
                   Keyboard="Numeric"
                   Text="{Binding Quantidade, Mode=TwoWay}" />
            <Label TextColor="Red" FontSize="Small"
                   Text="{Binding ErroQuantidade}" />

            <!-- Preço -->
            <Entry Placeholder="Preço"
                   Keyboard="Numeric"
                   Text="{Binding Preco, Mode=TwoWay}" />
            <Label TextColor="Red" FontSize="Small"
                   Text="{Binding ErroPreco}" />

            <!-- Categoria -->
            <Entry Placeholder="Categoria"
                   Text="{Binding Categoria, Mode=TwoWay}" />
            <Label TextColor="Red" FontSize="Small"
                   Text="{Binding ErroCategoria}" />

            <!-- Botão Salvar -->
            <Button Text="Salvar"
                    Clicked="Salvar_Clicked"
                    IsEnabled="{Binding HasErrors, Converter={StaticResource InverseBoolConverter}}" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>