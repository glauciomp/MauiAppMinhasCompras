<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppMinhasCompras.Views.NovoProduto"
             Title="Novo Produto">

    <ContentPage.ToolbarItems> <!-- mesmo conceito em colocar o botão acima no app -->
        
        <ToolbarItem Text="Salvar" Clicked="ToolbarItem_Clicked"/>
        <!-- programando o botão inserindo o clicked para navegar -->
        
    </ContentPage.ToolbarItems>
    
    <VerticalStackLayout Spacing="10" Padding="10">
        <Label Text="Descrição do Produto:"/>
        <!-- inserindo o título dos campos -->

        <Entry x:Name="txt_descricao"/>
        <!-- pegando o que o usuário digitou -->

        <Label Text="Quantidade:"/>
        <Entry x:Name="txt_quantidade" Keyboard="Numeric"/>
        <!-- definindo para o usuário digitar numero -->


        <Label Text="Preço Unitário:"/>
        <Entry x:Name="txt_preco" Keyboard="Numeric"/>
    </VerticalStackLayout>
</ContentPage>